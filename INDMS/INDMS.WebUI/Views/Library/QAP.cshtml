@model INDMS.WebUI.ViewModels.QAPViewModel

@{
    ViewBag.Title = "QAP";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            QAP
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Library</a></li>
            <li class="active">QAP</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Your Page Content Here -->
        <div class="row">
            <div class="col-md-12">
                @if (TempData["MSG"] != null) {
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @TempData["MSG"]
                    </div>
                }
                @if (TempData["Error"] != null) {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @TempData["Error"]
                    </div>
                }

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">@Html.ActionLink("New", "QAPNew", "Library", null, new { @class = "btn btn-primary" })</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <td>
                                        PO NO.
                                    </td>
                                    <td>
                                        FILE NO.
                                    </td>
                                    <td>
                                        QAP NO.
                                    </td>
                                    <td>
                                        SUBJECT
                                    </td>
                                    <td>
                                        APPROVED BY
                                    </td>
                                    <td>
                                        APPROVAL DATE
                                    </td>
                                    <td>
                                        Drawing No. Reference
                                    </td>
                                    <td>
                                        File
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.QAPs) {
                                    <tr>
                                        <td>
                                            @item.PONo
                                        </td>
                                        <td>
                                            @item.FileNo
                                        </td>
                                        <td>
                                            @item.QAPNo
                                        </td>
                                        <td>
                                            @item.Subject
                                        </td>
                                        <td>
                                            @item.ApprovedBy
                                        </td>
                                        <td>
                                            @item.ApprovalDate.ToShortDateString()
                                        </td>
                                        <td>
                                            @item.DrawingNoRef
                                        </td>
                                        <td>
                                            <a href="@item.FilePath" target="_blank" class="fa fa-folder-open-o" title="Open"></a> |
                                            @Html.ActionLink(" ", "QAPEdit", new { id = @item.Id }, new { @class = "fa fa-edit", @title = "Edit" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
@section scripts{
    <script>
        $(function () {
            $('li').removeClass("active");
            $('#liLibrary').addClass("active")
            $('#liQAP ').addClass("active")
            $('#liQAP i').addClass("text-aqua")
        });
    </script>
}