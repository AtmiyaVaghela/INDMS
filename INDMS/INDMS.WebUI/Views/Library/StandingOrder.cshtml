@model INDMS.WebUI.ViewModels.StandingOrderViewModel
@{
    ViewBag.Title = "Standing Orders";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Standing Orders
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Library</a></li>
            <li class="active">Standing Orders</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Your Page Content Here -->
        <div class="row">
            <div class="col-md-12">
                @if (TempData["MSG"] != null) {
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @TempData["MSG"]
                    </div>
                }
                @if (TempData["Error"] != null) {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @TempData["Error"]
                    </div>
                }

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"></h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>

                                    <td>
                                        Issuing Authority
                                    </td>
                                    <td>
                                        Subject
                                    </td>
                                    <td>
                                        Year
                                    </td>
                                    <td>
                                        Revision
                                    </td>

                                    <td>
                                        File
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.StandingOrders) {
                                <tr>
                                    <td>
                                        @item.IssuingAuthority
                                    </td>
                                    <td>
                                        @item.Subject
                                    </td>
                                    <td>
                                        @item.Year
                                    </td>
                                    <td>
                                        @item.Revision
                                    </td>
                                    <td>
                                        <a href="@item.FilePath" target="_blank" class="fa fa-folder-open-o" title="Open"></a> |
                                        @Html.ActionLink(" ", "StandingOrderEdit", new { id = @item.id }, new { @class = "fa fa-edit", @title = "Edit" })
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
@section scripts{
    <script>
        $(function () {
            $('li').removeClass("active");
            $('#liLibrary').addClass("active")
            $('#liStandingOrder ').addClass("active")

            $('#liStandingOrder i').addClass("text-aqua")
            $('#liGuidelinesAndStandingOrders ').addClass("active")
        });
    </script>
}