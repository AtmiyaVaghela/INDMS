@model INDMS.WebUI.ViewModels.POCorrespondenceViewModel

@{
    ViewBag.Title = "Edit - PO Correspondence";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Edit - PO Correspondence
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>PO</a></li>
            <li class="active">PO Correspondence</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Your Page Content Here -->
        <div class="row">
            <div class="col-md-12">
                @if (TempData["MSG"] != null)
                {
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @TempData["MSG"]
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @TempData["Error"]
                    </div>
                }

                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">
                            <p>@Html.ActionLink("Back", "Index", "POFlow", new { @Id = Model.POCorrespondence.POId }, new { @class = "btn btn-primary" })</p>
                        </h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("Edit", "POCorrespondence", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-horizontal">
                            @Html.AntiForgeryToken()
                            <div class="box-body">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                @Html.HiddenFor(x => x.POCorrespondence.Id)
                                @Html.HiddenFor(x => x.POCorrespondence.POId)

                                <div class="form-group">
                                    @Html.Label("PO No", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.POCorrespondence.PONo, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.POCorrespondence.PONo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("File No", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.POCorrespondence.FileNo, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.POCorrespondence.FileNo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Letter No", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.POCorrespondence.LetterNo, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.POCorrespondence.LetterNo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.POCorrespondence.Description, new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.POCorrespondence.Description, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.POCorrespondence.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.POCorrespondence.Subject, new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.POCorrespondence.Subject, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.POCorrespondence.Subject, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("", "Type of Correspondence", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        <select id="POCorrespondence_TypeOfCorrespondence"
                                                name="POCorrespondence.TypeOfCorrespondence"
                                                class="form-control">
                                            <option value="">-Select-</option>
                                            <option value="IN">IN</option>
                                            <option value="OUT">OUT</option>
                                        </select>

                                        @Html.ValidationMessageFor(model => model.POCorrespondence.TypeOfCorrespondence, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group" id="divFrom">
                                    @Html.Label("", "From", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.POCorrespondence.From, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.POCorrespondence.From, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group" id="divTO">
                                    @Html.Label("", "To", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.POCorrespondence.To, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.POCorrespondence.To, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("", "Copy To", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.POCorrespondence.CopyTo, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.POCorrespondence.CopyTo, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Date", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            @Html.TextBoxFor(m => m.POCorrespondence.Date, new { @class = "form-control dp" })
                                        </div><!-- /.input group -->
                                        @Html.ValidationMessageFor(model => model.POCorrespondence.Date, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("File", new { @class = "control-label col-md-2" })
                                    <div class="col-md-6">
                                        @Html.HiddenFor(x => @Model.file)
                                        @if (Model.file != null)
                                        {
                                            <a href="@Model.file" target="_blank" class="fa fa-folder-open-o" title="Open">Open</a>
                                        }
                                        <input type="file" id="inputFile" name="inputFile">
                                        <p class="help-block">File must be PDF.</p>
                                    </div>
                                </div>
                            </div><!-- /.box-body -->
                            <div class="box-footer">
                                <div class="col-md-offset-2">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </div>
                    }
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
@section scripts{
    <script>
        $(function () {
            $('li').removeClass("active");
            $("#POCorrespondence_TypeOfCorrespondence").val('@Model.POCorrespondence.TypeOfCorrespondence');
            $('#POCorrespondence_TypeOfCorrespondence').trigger('change');
            $("#POCorrespondence_TypeOfCorrespondence").change(function () {
                var v = $("#POCorrespondence_TypeOfCorrespondence").val();
                if (v == "IN") {
                    $("#divTO").hide();
                    $("#divFrom").show();
                }
                else if (v == "OUT") {
                    $("#divFrom").hide();
                    $("#divTO").show();
                }
                else {
                    $("#divFrom").show();
                    $("#divTO").show();
                }
            });

            //$('#liLibrary').addClass("active")
            //$('#liDrawing ').addClass("active")
            //$('#liDrawing i').addClass("text-aqua")
        });
    </script>
}