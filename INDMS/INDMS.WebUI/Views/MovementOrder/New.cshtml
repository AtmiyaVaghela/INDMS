@model INDMS.WebUI.ViewModels.MovementOrderViewModel

@{
    ViewBag.Title = "New - Movement Order";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            New - Movement Order
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Library</a></li>
            <li class="active">Movement Order</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content" style="font-size:medium">
        <!-- Your Page Content Here -->
        <div class="row">
            <div class="col-md-12">
                @if (TempData["MSG"] != null) {
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @TempData["MSG"]
                    </div>
                }
                @if (TempData["Error"] != null) {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @TempData["Error"]
                    </div>
                }
            </div>
        </div>
        <div class="box">
            <div class="box-header">

            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        No. QAEV/ <b>TY MEMO NO.</b>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        Date <b>DATE</b>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <p class="text-center text-bold" style="font-size:large">MOVEMENT ORDER / MOVE SANCTION</p>
                    </div>
                </div>
                <div class="form-inline pull-left">
                    <div class="pull-left" style="padding-right:5px"><b>1.</b> The following move sanction of</div>
                    <div class="pull-left" style="padding-right:5px"> @Html.TextBoxFor(model => model.MovementOrder.InspectorName, null, new { @class = "form-control col-md-4" })</div>
                    <div class="pull-left" style="padding-right:5px"> @Html.TextBoxFor(model => model.MovementOrder.Designation, null, new { @class = "form-control col-md-4" }) </div>
                    <div class="pull-left" style="padding-right:5px"> of this establishment is hereby approved for ty.duty to </div>
                    <div class="pull-left" style="padding-right:5px"> @Html.TextBoxFor(model => model.MovementOrder.FirmName, null, new { @class = "form-control col-md-4" }) </div>
                    <div class="pull-left">for inspection of naval Equipments.:-</div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <b> a) Outward Journey</b>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Time & Date</th>
                                    <th>From</th>
                                    <th>To</th>
                                    <th>Time & Date</th>
                                    <th>Mode Of Travel</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Html.TextBoxFor(model => model.MovementOrder.OnwardStartDate, null, new { @class = "form-control" })</td>
                                    <td>@Html.TextBoxFor(model => model.MovementOrder.OnwordFrom, null, new { @class = "form-control" })</td>
                                    <td>@Html.TextBoxFor(model => model.MovementOrder.OnwordTo, null, new { @class = "form-control" })</td>
                                    <td>@Html.TextBoxFor(model => model.MovementOrder.ReturnEndDate, null, new { @class = "form-control" })</td>
                                    <td>@Html.TextBoxFor(model => model.MovementOrder.OnwordModeOfTravel, null, new { @class = "form-control" })</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <b>b) Return Journey</b>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Time & Date</th>
                                    <th>From</th>
                                    <th>To</th>
                                    <th>Time & Date</th>
                                    <th>Mode Of Travel</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Html.TextBoxFor(model => model.MovementOrder.ReturnStartDate, null, new { @class = "form-control" })</td>
                                    <td>@Html.TextBoxFor(model => model.MovementOrder.ReturnFrom, null, new { @class = "form-control" })</td>
                                    <td>@Html.TextBoxFor(model => model.MovementOrder.ReturnTo, null, new { @class = "form-control" })</td>
                                    <td>@Html.TextBoxFor(model => model.MovementOrder.ReturnEndDate, null, new { @class = "form-control" })</td>
                                    <td>@Html.TextBoxFor(model => model.MovementOrder.ReturnModeOfTravel, null, new { @class = "form-control" })</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <b>2.</b> The officer will leave on <b>ONWARD JOURNEY START TIME & DATE</b> and return on completion of the duty.
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <b>3. </b>The journey will be performed by Train/Auto.
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <b>4. Certified that the above move has been sanctioned in accordance with provision of TR 4 and TA/DA will be admitted as permissible under the rules.</b>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <b>5. </b>The expenditure is debitable under Major Head 2076 Minor Head 109-D-1 Movement of Personnel.
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 ">
                        <span class="pull-right"> @Html.TextBoxFor(model => model.MovementOrder.SigningAuthority, null, new { @class = "form-control" }) </span>
                        <span class="pull-right"> @Html.TextBoxFor(model => model.MovementOrder.SADesignation, null, new { @class = "form-control" })</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        Distribution:-<br />
                        1.	DQA(WP), New Delhi <br />
                        2.	AAO, Ahmedabad <br />
                        3.	<b>INSPECTOR NAME</b>
                    </div>
                </div>
            </div>
        </div>

    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
