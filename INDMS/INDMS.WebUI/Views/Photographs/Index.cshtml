@model INDMS.WebUI.ViewModels.PhotographsViewModel
@{
    ViewBag.Title = "Photographs";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Files
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-user-plus"></i>Admin Files</a></li>
            <li class="active">Photographs</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Your Page Content Here -->
        <div class="row">
            <div class="col-md-12">
                @if (TempData["MSG"] != null)
                {
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @TempData["MSG"]
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @TempData["Error"]
                    </div>
                }

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">@Html.ActionLink("New", "New", "Photographs", null, new { @class = "btn btn-primary" })</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <td>
                                        Folder Name
                                    </td>
                                    <td>
                                        Subject
                                    </td>
                                    <td>
                                        Date
                                    </td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Photographs != null)
                                {
                                    foreach (var item in Model.Photographs)
                                    {
                                        <tr>
                                            <td>
                                                @item.FolderName
                                            </td>
                                            <td>
                                                @item.Subject
                                            </td>
                                            <td>
                                                @item.Date
                                            </td>
                                            <td>
                                                <a href="@item.FilePath" target="_blank" class="fa fa-folder-open-o" title="Open"></a> |
                                                @Html.ActionLink(" ", "Edit", new { id = @item.Id }, new { @class = "fa fa-edit", @title = "Edit" })
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
@section scripts{
    <script>
        $(function () {
            $('li').removeClass("active");
            $('#liAdminFiles').addClass("active")
            $('#liPhotographs ').addClass("active");
            $('#liPhotographs i').addClass("text-aqua");
        });
    </script>
}