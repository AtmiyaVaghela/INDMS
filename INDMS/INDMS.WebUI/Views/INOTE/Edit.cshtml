@model INDMS.WebUI.ViewModels.INOTEViewModel

@{
    ViewBag.Title = "Edit - I-NOTE/FORM 4";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Edit - I-NOTE/FORM 4
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>PO</a></li>
            <li class="active">I-NOTE/FORM 4</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Your Page Content Here -->
        <div class="row">
            <div class="col-md-12">
                @if (TempData["MSG"] != null)
                {
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @TempData["MSG"]
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @TempData["Error"]
                    </div>
                }

                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">
                            <p>@Html.ActionLink("Back", "Index", "POFlow", new { @Id = Model.CoveringLetter.POId }, new { @class = "btn btn-primary" })</p>
                        </h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("New", "INOTE", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-horizontal">
                            @Html.AntiForgeryToken()
                            <div class="box-body">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                @Html.HiddenFor(x => x.CoveringLetter.POId)
                                @Html.HiddenFor(x => x.CoveringLetter.Id)

                                <div class="form-group">
                                    @Html.Label("PO No", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.CoveringLetter.PONo, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.CoveringLetter.PONo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("File No", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.CoveringLetter.FileNo, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.CoveringLetter.FileNo, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Date", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            @Html.TextBoxFor(m => m.CoveringLetter.Date, new { @class = "form-control dp" })
                                        </div><!-- /.input group -->
                                        @Html.ValidationMessageFor(model => model.CoveringLetter.Date, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("", "No. Of Lots", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.CoveringLetter.NoOfLots, null, new { @class = "form-control decimalOnly" })
                                        @Html.ValidationMessageFor(model => model.CoveringLetter.NoOfLots, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("", "PO Value", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.CoveringLetter.POValue, null, new { @class = "form-control decimalOnly" })
                                        @Html.ValidationMessageFor(model => model.CoveringLetter.POValue, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("", "Warantee/Gurantee", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.CoveringLetter.Warantee, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.CoveringLetter.Warantee, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div><!-- /.box-body -->
                            <div class="box-footer">
                                <div class="col-md-offset-2">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </div>
                    }
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
@section scripts{
    <script>
        $(function () {

            $('li').removeClass("active");
            //$('#liLibrary').addClass("active")
            //$('#liDrawing ').addClass("active")
            //$('#liDrawing i').addClass("text-aqua")
        });
    </script>
}