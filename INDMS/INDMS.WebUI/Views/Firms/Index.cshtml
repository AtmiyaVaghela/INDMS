@model IEnumerable<INDMS.WebUI.Models.Firm>

@{
    ViewBag.Title = "Firms";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Drawings
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Firm</a></li>
       
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Your Page Content Here -->
        <div class="row">
            <div class="col-md-12">
                @if (TempData["MSG"] != null)
                {
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @TempData["MSG"]
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @TempData["Error"]
                    </div>
                }

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            @Html.ActionLink("Create New", "Create", "Firms", null, new { @class = "btn btn-primary" })
                        </h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <td></td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.FirmName)
                                    </td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.FirmAddress)
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                  
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirmName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirmAddress)
                                        </td>   
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->

<h2>Index</h2>


